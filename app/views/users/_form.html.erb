<h2>Signup Form</h2>

<%= form_for @user, url: {action: "create"} do |f| %>
  <div class="field">
    <%= f.label "first name" %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label "last name" %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label "city" %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label "state" %>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label "email address" %>
    <%= f.text_field :email_address %>
  </div>
  <div class="field">
    <%= f.label "password" %>
    <%= f.password_field "password" %>
  </div>
  <div class="field">
    <%= f.label "password confirmation" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit %>
<% end %>
